@{
    // ViewData["Title"] = "Car Detail";
}

@model CarVM

<section class="carDetail">
    <div class="container my-5">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                <div class="carItem">
                    <img src="@Model.CarImageGetById[0].PhotoUrl" class="mainImage" />
                    <div class="carDetail">
                        <h3 class="carBrandName">@Model.CarGetById.CarBrand</h3>
                        <h3 class="carModelName">@Model.CarGetById.CarModel</h3>
                        <h5 class="carPrice">@Model.CarGetById.CarPrice AZN</h5>
                        <p class="carDescription">@Model.CarGetById.Description</p>
                    </div>
                    <div class="allCarImage">
                        <div class="row">
                            @if (Model.CarImageGetById.Count > 0)
                            {
                                @foreach (var item in Model.CarImageGetById)
                                {
                                    <div class="col-6 col-sm-2 col-md-2 col-lg-2">
                                        <img class="img-fluid w-100 h-50" src="@item.PhotoUrl" />
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>